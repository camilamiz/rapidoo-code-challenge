<div class="container">
  <div class="navbar-space"></div>
  <div class="col-xs-8 col-xs-offset-2">
    <div class="session-box", id="signup">
      <div class="text-center">
        <h2>Cadastro</h2>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="col-xs-6">
            <%= f.input :email,
                        required: true,
                        autofocus: true ,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :name,
                        label: "Nome",
                        required: true,
                        autofocus: true ,
                        input_html: { autocomplete: "name" }%>
            <%= f.input :company_name,
                        label: "Nome da empresa",
                        required: true,
                        autofocus: true ,
                        input_html: { autocomplete: "company_name" }%>
            <%= f.input :monthly_revenue,
                        label: "Receita mensal (R$)",
                        required: true,
                        autofocus: true ,
                        input_html: { autocomplete: "monthly_revenue" }%>
          </div>
          <div class="col-xs-6">
            <%= f.input :password,
                        label: 'Senha',
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: 'Favor confirmar a senha',
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
            <div class="form-actions">
              <%= f.button :submit, "Cadastrar", class: 'btn btn-warning'%>
            </div>
            <%= render "devise/shared/links" %>
          </div>
        </div>

      <% end %>
    </div><!--  session-box -->
  </div> <!-- col -->
</div> <!-- container -->
