<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand", id: "logo" do %>
    <%= image_tag "logo.png", height: 70 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

    <%= link_to "Simulador", new_invoice_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Minhas duplicatas", invoices_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <!-- <a href="" class="navbar-wagon-item navbar-wagon-link">Meu cadastro</a> -->
    <%= button_to destroy_user_session_path, class:"btn btn-warning", id: "sign-out-button", method: :delete do %>
      <%= t(".sign_out", default: "Log out") %>
    <% end %>

    <% else %>
        <%= link_to t(".sign_in", default: "JÃ¡ sou cliente"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" do %>
          <div class="btn btn-success button-margin button-padding", id="sign-in-button">Abra sua conta gratuita</div>
        <% end %>
    <% end %>
  </div>


  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">

  </div>
</div>
